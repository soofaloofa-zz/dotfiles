# General Settings
####################################################################

# only search with case sensitivity if there is mixed case
--smart-case
# follow symlinks
--follow

# Type Settings
####################################################################

--type-set=plaintext=.md,.mdown,.markdown,.mkdn,.textile,.rst,.txt
--type-set=csv=.csv,.tsv

--type-add=css=scss
--type-set=coffeescript=.coffee
--type-set=coffee=.coffee
--type-set=jade=.jade
--type-set=json=.json
 

# Ignore Settings
####################################################################
--ignore-dir=build
--ignore-dir=node_modules
--ignore-dir=coverage
--ignore-file=is:tags
--ignore-file=is:cscope.out
